{
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["warn", { "singleQuote": true }],
        "no-underscore-dangle" : ["warn", { "allow": [ "_id" ]}],
        "import/no-unresolved": ["warn", { "caseSensitive": false }]  
    },
    "ignorePatterns": [
        "node_modules/"
    ]
}
